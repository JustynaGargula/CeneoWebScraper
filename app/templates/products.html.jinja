{% extends "base.html.jinja" %}
{% block content %}

    <h2>Lista produkt√≥w</h2>
    <ul class="list-group">
        {% for product in products %}
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <a class="nav-link" href="{{url_for('product', product_id=product[0])}}"><i class="bi bi-door-open-fill"></i>
                {{product[0]}}</a>
                {% for key, value in product[1].items()%}
                    {% if key!="product_id" and key!="product_name" %}
                        <li class="list-group-item d-flex justify-content-between align-items-center ml-5">
                            {{key}}
                            <span class="badge bg-primary rounded-pill">{{value}}</span>
                        </li>
                    {% endif %}
                {% endfor %}                   
                <button type="button" class="btn btn-dark ml-5">
                    <a href="{{ json_file }}" download><i class="bi bi-download">
                    Pobierz plik json</i>
                    </a>
                </button>                  

                <!--<span class="badge bg-primary rounded-pill">
                {{loop.index}}
                </span>-->
            </li>
        {% endfor %}
    </ul>
{% endblock %}